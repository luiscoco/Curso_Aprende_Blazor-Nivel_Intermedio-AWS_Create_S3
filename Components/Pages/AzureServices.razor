@page "/createS3Bucket"

@using Amazon.S3
@using Amazon.S3.Model

<h3>AzureServices</h3>

<button @onclick="CreateS3Bucket">Create S3 Bucket</button>

@code {
    private IAmazonS3 _client;

    protected override async Task OnInitializedAsync()
    {
        _client = new AmazonS3Client();
    }

    private async Task CreateS3Bucket()
    {
        var request = new PutBucketRequest
            {
                BucketName = "luiscoconrriquezbucket",
                UseClientRegion = true,
            };

        var response = await _client.PutBucketAsync(request);
        // You can add logic to handle the response here if needed
    }
}
